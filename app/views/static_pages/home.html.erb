<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
	<h1>Welcome to Mx-Forum!</h1>
	<h4>
    Your go-to place for the most up to date information on upcoming motorcycle events. Sign up and explore!
	</h4>
  <%=image_tag("background.jpg") %>
<% end %>